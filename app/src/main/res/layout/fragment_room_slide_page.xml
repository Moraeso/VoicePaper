<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/layout_room1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/iv_roomProfile1"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_roomName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_room2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/layout_room1"
        android:layout_alignTop="@id/layout_room1"
        android:layout_marginLeft="50dp">

        <ImageView
            android:id="@+id/iv_roomProfile2"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_roomName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_room3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/layout_room1"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/iv_roomProfile3"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_roomName3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_room4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/layout_room3"
        android:layout_alignTop="@id/layout_room3"
        android:layout_below="@id/layout_room2"
        android:layout_marginLeft="50dp">

        <ImageView
            android:id="@+id/iv_roomProfile4"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_roomName4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="" />
    </LinearLayout>

</RelativeLayout>